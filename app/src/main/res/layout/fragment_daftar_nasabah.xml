<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EEEEEE">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TxvJudul"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Daftar Nasabah Baru"
        android:textAlignment="center"
        android:textColor="#373737"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/CvFormulir"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TxvJudul">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbarSize="0dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="200dp">

                <!--Information Options -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/CvInfoPribadi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#F1F1F1"
                    app:cardCornerRadius="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Data Personal"
                            android:textColor="@color/gray_800"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtUsername"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:hint="Username"
                                android:inputType="text"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:hint="Email"
                                android:inputType="text"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtNamaNasabah"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:hint="Nama lengkap"
                                android:inputType="text"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtNamaIbuKandung"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:hint="Nama ibu kandung"
                                android:inputType="text"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtNoHp"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:hint="No. HP"
                                android:inputType="number"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="8"
                                android:background="@drawable/bg_gradient_white"
                                android:orientation="horizontal"
                                tools:ignore="UselessParent">

                                <Spinner
                                    android:id="@+id/SpJenisKelamin"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:overlapAnchor="false"
                                    android:spinnerMode="dropdown" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:layout_marginTop="-5dp"
                                android:background="@color/blue_50"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="Jenis kelamin"
                                android:textColor="@color/txBlack" />
                        </RelativeLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtTempatLahir"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:hint="Tempat lahir"
                                android:inputType="text"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtTglLahir"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:clickable="false"
                                android:focusable="false"
                                android:fontFamily="@font/lato"
                                android:hint="Tanggal lahir"
                                android:inputType="date"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="bottom"

                            android:orientation="vertical"
                            android:textColorHint="@color/colorPrimary">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="3dp"
                                    android:layout_weight="8"
                                    android:background="@drawable/bg_gradient_white"
                                    android:orientation="horizontal"
                                    tools:ignore="UselessParent">

                                    <Spinner
                                        android:id="@+id/SpAgama"
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:overlapAnchor="false"
                                        android:spinnerMode="dropdown" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="9dp"
                                    android:layout_marginTop="-5dp"
                                    android:background="@color/blue_50"
                                    android:paddingLeft="3dp"
                                    android:paddingRight="3dp"
                                    android:text="Agama"
                                    android:textColor="@color/txBlack" />
                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--Personal Data-->
                <!--Pre Registration Data-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/CvAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#F1F1F1"
                    app:cardCornerRadius="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/CvInfoPribadi">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Alamat"
                            android:textColor="@color/gray_800"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:layout_weight="8"
                                android:background="@drawable/bg_gradient_white"
                                android:orientation="horizontal"
                                tools:ignore="UselessParent">

                                <Spinner
                                    android:id="@+id/SpProvinsi"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:overlapAnchor="false"
                                    android:spinnerMode="dropdown" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:layout_marginTop="-5dp"
                                android:background="@color/blue_50"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="Provinsi"
                                android:textColor="@color/txBlack" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:layout_weight="8"
                                android:background="@drawable/bg_gradient_white"
                                android:orientation="horizontal"
                                tools:ignore="UselessParent">

                                <Spinner
                                    android:id="@+id/SpKabupaten"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:overlapAnchor="false"
                                    android:spinnerMode="dropdown" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:layout_marginTop="-5dp"
                                android:background="@color/blue_50"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="Kabupaten"
                                android:textColor="@color/txBlack" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:layout_weight="8"
                                android:background="@drawable/bg_gradient_white"
                                android:orientation="horizontal"
                                tools:ignore="UselessParent">

                                <Spinner
                                    android:id="@+id/SpKecamatan"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:overlapAnchor="false"
                                    android:spinnerMode="dropdown" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:layout_marginTop="-5dp"
                                android:background="@color/blue_50"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="Kecamatan"
                                android:textColor="@color/txBlack" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:layout_weight="8"
                                android:background="@drawable/bg_gradient_white"
                                android:orientation="horizontal"
                                tools:ignore="UselessParent">

                                <Spinner
                                    android:id="@+id/SpKelurahan"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:overlapAnchor="false"
                                    android:spinnerMode="dropdown" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:layout_marginTop="-5dp"
                                android:background="@color/blue_50"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="Desa / kelurahan"
                                android:textColor="@color/txBlack" />
                        </RelativeLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtAlamatRumah"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:gravity="top"
                                android:hint="Alamat lengkap"
                                android:inputType="text"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtWargaNegara"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:hint="Warga Negara"
                                android:inputType="textUri"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/CvPreRegis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#F1F1F1"
                    app:cardCornerRadius="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/CvAlamat">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Pekerjaan"
                            android:textColor="@color/gray_800"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"
                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtPekerjaan"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:hint="Pekerjaan"
                                android:inputType="text"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtNamaPerusahaan"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:hint="Nama perusahaan / usaha"
                                android:inputType="text"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtAlamatTempatKerja"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:hint="Alamat tempat kerja"
                                android:inputType="text"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--Message For Training Provider-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/CvMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#F1F1F1"
                    app:cardCornerRadius="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/CvPreRegis">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Informasi Tambahan"
                            android:textColor="@color/gray_800"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtHobi"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:hint="Hobi"
                                android:inputType="text"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtMakananKesukaan"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:hint="Makanan kesukaan"
                                android:inputType="text"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:layout_weight="8"
                                android:background="@drawable/bg_gradient_white"
                                android:orientation="horizontal"
                                tools:ignore="UselessParent">

                                <Spinner
                                    android:id="@+id/SpGolonganDarah"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:overlapAnchor="false"
                                    android:spinnerMode="dropdown" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:layout_marginTop="-5dp"
                                android:background="@color/blue_50"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="Golongan Darah"
                                android:textColor="@color/txBlack" />
                        </RelativeLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/BtnDaftar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                    android:text="Daftar"
                    android:textAllCaps="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/CvMessage" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/CvNoAkses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/no_akses_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>