<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nasabah.EditNasabahActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="2dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Toolbar -->

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:navigationIcon="@drawable/ic_left"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="Edit Nasabah"
            app:titleMargin="0dp"
            app:titleTextColor="#FFFFFF" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:text="Ubah Profil"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/BtnSimpan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_gradient_white"
                    android:elevation="0dp"
                    android:enabled="false"
                    android:fontFamily="@font/asap_bold"
                    android:text="Simpan"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_800" />


            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/CvFormulir"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbarSize="0dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/CvPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#F1F1F1"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="4dp">

                        <ImageView
                            android:id="@+id/IvFotoNasabah"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/ic_user"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/BtnImage"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_image"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <!--Information Options -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/CvInfoPribadi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#F1F1F1"
                    app:cardCornerRadius="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/CvPhoto">

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Data Personal"
                            android:textColor="@color/gray_800"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <TextView
                                android:id="@+id/EtUsername"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_gray"
                                android:editable="false"
                                android:fontFamily="@font/lato"
                                android:hint="Username"
                                android:inputType="text"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:hint="Email"
                                android:inputType="text"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtNamaNasabah"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:hint="Nama lengkap"
                                android:inputType="text"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtNamaIbuKandung"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:hint="Nama ibu kandung"
                                android:inputType="text"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtNoHp"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:hint="No. HP"
                                android:inputType="number"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="8"
                                android:background="@drawable/bg_gradient_white"
                                android:orientation="horizontal"
                                tools:ignore="UselessParent">

                                <Spinner
                                    android:id="@+id/SpJenisKelamin"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:overlapAnchor="false"
                                    android:spinnerMode="dropdown" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:layout_marginTop="-5dp"
                                android:background="@color/blue_50"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="Jenis kelamin"
                                android:textColor="@color/txBlack" />
                        </RelativeLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtTempatLahir"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:hint="Tempat lahir"
                                android:inputType="text"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtTglLahir"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:clickable="false"
                                android:focusable="false"
                                android:fontFamily="@font/lato"
                                android:hint="Tanggal lahir"
                                android:inputType="date"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="bottom"

                            android:orientation="vertical"
                            android:textColorHint="@color/colorPrimary">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="3dp"
                                    android:layout_weight="8"
                                    android:background="@drawable/bg_gradient_white"
                                    android:orientation="horizontal"
                                    tools:ignore="UselessParent">

                                    <Spinner
                                        android:id="@+id/SpAgama"
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:overlapAnchor="false"
                                        android:spinnerMode="dropdown" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="9dp"
                                    android:layout_marginTop="-5dp"
                                    android:background="@color/blue_50"
                                    android:paddingLeft="3dp"
                                    android:paddingRight="3dp"
                                    android:text="Agama"
                                    android:textColor="@color/txBlack" />
                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--Personal Data-->
                <!--Pre Registration Data-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/CvAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#F1F1F1"
                    app:cardCornerRadius="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/CvInfoPribadi">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Alamat"
                            android:textColor="@color/gray_800"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:layout_weight="8"
                                android:background="@drawable/bg_gradient_white"
                                android:orientation="horizontal"
                                tools:ignore="UselessParent">

                                <Spinner
                                    android:id="@+id/SpProvinsi"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:overlapAnchor="false"
                                    android:spinnerMode="dropdown" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:layout_marginTop="-5dp"
                                android:background="@color/blue_50"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="Provinsi"
                                android:textColor="@color/txBlack" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:layout_weight="8"
                                android:background="@drawable/bg_gradient_white"
                                android:orientation="horizontal"
                                tools:ignore="UselessParent">

                                <Spinner
                                    android:id="@+id/SpKabupaten"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:overlapAnchor="false"
                                    android:spinnerMode="dropdown" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:layout_marginTop="-5dp"
                                android:background="@color/blue_50"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="Kabupaten"
                                android:textColor="@color/txBlack" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:layout_weight="8"
                                android:background="@drawable/bg_gradient_white"
                                android:orientation="horizontal"
                                tools:ignore="UselessParent">

                                <Spinner
                                    android:id="@+id/SpKecamatan"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:overlapAnchor="false"
                                    android:spinnerMode="dropdown" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:layout_marginTop="-5dp"
                                android:background="@color/blue_50"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="Kecamatan"
                                android:textColor="@color/txBlack" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:layout_weight="8"
                                android:background="@drawable/bg_gradient_white"
                                android:orientation="horizontal"
                                tools:ignore="UselessParent">

                                <Spinner
                                    android:id="@+id/SpKelurahan"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:overlapAnchor="false"
                                    android:spinnerMode="dropdown" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:layout_marginTop="-5dp"
                                android:background="@color/blue_50"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="Desa / kelurahan"
                                android:textColor="@color/txBlack" />
                        </RelativeLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtAlamatRumah"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:gravity="top"
                                android:hint="Alamat lengkap"
                                android:inputType="text"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtWargaNegara"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:hint="Warga Negara"
                                android:inputType="textUri"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/CvPreRegis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#F1F1F1"
                    app:cardCornerRadius="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/CvAlamat">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Pekerjaan"
                            android:textColor="@color/gray_800"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"
                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtPekerjaan"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:hint="Pekerjaan"
                                android:inputType="text"
                                android:paddingStart="4dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:textColor="#585858"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="#247F8D"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="bottom"

                            android:textColorHint="@color/colorPrimary">

                            <EditText
                                android:id="@+id/EtNamaPerusahaan"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_gradient_white"
                                android:fontFamily="@font/lato"
                                android:hint="Nama perusahaan / usaha"
